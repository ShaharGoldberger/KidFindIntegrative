<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_MTV_alert"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="128dp"
            android:layout_marginTop="64dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:textColor="@color/primary_color"
            android:text="@string/alert_parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Send_MB_SendAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_MTV_alert"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Send alert"
            />

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Send_MB_SendAlert"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>